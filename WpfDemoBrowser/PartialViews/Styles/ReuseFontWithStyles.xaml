<UserControl x:Class="Styles.ReuseFontWithStyles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="350" Width="379">
    <UserControl.Resources>
        <Style x:Key="BigFontButtonStyle">
            <Setter Property="Control.FontFamily" Value="Times New Roman" />
            <Setter Property="Control.FontSize" Value="18" />
            <Setter Property="Control.FontWeight" Value="Bold" />
        </Style>
    </UserControl.Resources>
    <StackPanel Margin="5">
        <Button Padding="5" Margin="5" Style="{StaticResource BigFontButtonStyle}">
            A Customized Button
        </Button>
        <TextBlock Margin="5">Normal Content.</TextBlock>
        <Button Padding="5" Margin="5">A Normal Button</Button>
        <TextBlock Margin="5">More normal Content.</TextBlock>
        <Button Padding="5" Margin="5" Style="{StaticResource BigFontButtonStyle}">
            Another Customized Button
        </Button>
    </StackPanel>
</UserControl>
